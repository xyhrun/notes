<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView android:id="@+id/select_img_id"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:visibility="gone"/>

        <VideoView android:id="@+id/select_video_id"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:visibility="gone"/>

        <EditText android:id="@+id/select_et_id"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="在幻变的生命里,岁月是最大的小偷.它存在于我的记录里,我想追逐它的步伐."/>

       <TextView android:id="@+id/select_time_id"
           android:gravity="right"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="#11cd6e"/>
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button android:id="@+id/select_delete_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="删除"/>

        <Button android:id="@+id/select_return_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="返回"/>

    </LinearLayout>
</LinearLayout>